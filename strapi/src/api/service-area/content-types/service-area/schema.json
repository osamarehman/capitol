{
  "kind": "collectionType",
  "collectionName": "service_areas",
  "info": {
    "singularName": "service-area",
    "pluralName": "service-areas",
    "displayName": "Service Areas",
    "description": "Service area cities with attached counties"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "searchable": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true,
      "searchable": true
    },
    "state": {
      "type": "enumeration",
      "required": false,
      "enum": ["MD", "DC", "VA"]
    },
    "counties": {
      "type": "component",
      "repeatable": true,
      "component": "service-area.county"
    },
    "schemaMarkup": {
      "type": "text",
      "required": false
    },
    "customHtml": {
      "type": "text",
      "required": false
    },
    "customContent": {
      "type": "customField",
      "customField": "plugin::ckeditor5.CKEditor",
      "options": {
        "preset": "defaultHtml"
      },
      "required": false
    },
    "faqContent": {
      "type": "customField",
      "customField": "plugin::ckeditor5.CKEditor",
      "options": {
        "preset": "defaultHtml"
      },
      "required": false
    },
    "map": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "coordinatesLatLong": {
      "type": "text",
      "required": false
    },
    "zoomLevel": {
      "type": "decimal",
      "required": false
    }
  }
}
